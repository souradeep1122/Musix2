<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Upload Your Music</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    :root {
    --bg-primary: #0a0f1c;
    --bg-secondary: #111827;
    --bg-card: #1e293b;
    --text-primary: #f8fafc;
    --text-secondary: #94a3b8;
    --accent: #22c55e;
    --accent-hover: #16a34a;
    --border: #334155;
    --border-light: #475569;
    --shadow: 0 20px 50px rgba(0, 0, 0, 0.6);
    --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: var(--bg-primary);
    color: var(--text-primary);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    background-image: 
      radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, rgba(120, 219, 255, 0.1) 0%, transparent 50%);
  }

  .upload-container {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 24px;
    padding: 40px;
    width: 100%;
    max-width: 500px;
    box-shadow: var(--shadow);
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
    animation: slideUp 0.6s ease-out;
  }

  .upload-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient);
    opacity: 0.6;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  h1 {
    text-align: center;
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 30px;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.025em;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 24px;
    margin-bottom: 30px;
  }

  .file-input-wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border: 2px dashed var(--border);
    border-radius: 16px;
    padding: 40px 20px;
    background: var(--bg-secondary);
    transition: all 0.3s ease;
    cursor: pointer;
    min-height: 160px;
  }

  .file-input-wrapper:hover {
    border-color: var(--accent);
    background: rgba(34, 197, 94, 0.05);
    transform: translateY(-2px);
  }

  .file-input-wrapper.dragover {
    border-color: var(--accent);
    background: rgba(34, 197, 94, 0.1);
    transform: scale(1.02);
  }

  input[type="file"] {
    position: absolute;
    opacity: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
  }

  .upload-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 16px;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .file-input-wrapper:hover .upload-icon {
    opacity: 1;
  }

  label {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 8px;
    text-align: center;
  }

  .file-hint {
    font-size: 0.9rem;
    color: var(--text-secondary);
    text-align: center;
  }

  .selected-file {
      margin-top: 12px;
padding: 12px 16px;
background: rgba(34, 197, 94, 0.1);
border: 1px solid var(--accent);
border-radius: 8px;
color: var(--accent);
font-size: 0.9rem;
text-align: center;
animation: fadeIn 0.3s ease;
word-break: break-word;
overflow-wrap: break-word;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  button {
    background: var(--gradient);
    color: white;
    border: none;
    padding: 16px 32px;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(34, 197, 94, 0.3);
  }

  button:active {
    transform: translateY(0);
  }

  button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .view-files-link {
    display: inline-block;
    text-align: center;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 1rem;
    padding: 12px 24px;
    border: 1px solid var(--border);
    border-radius: 12px;
    transition: all 0.3s ease;
    width: 100%;
  }

  .view-files-link:hover {
    color: var(--text-primary);
    border-color: var(--border-light);
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-1px);
  }

  /* Mobile responsiveness */
  @media (max-width: 640px) {
    .upload-container {
      padding: 24px;
      margin: 10px;
      border-radius: 20px;
    }

    h1 {
      font-size: 1.8rem;
      margin-bottom: 24px;
    }

    .file-input-wrapper {
      padding: 30px 15px;
      min-height: 140px;
    }

    button {
      padding: 14px 28px;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    body {
      padding: 15px;
    }

    .upload-container {
      padding: 20px;
    }

    h1 {
      font-size: 1.6rem;
    }

    .file-input-wrapper {
      padding: 25px 10px;
      min-height: 120px;
    }
  }
  </style>
  
</head>
<body>
  <div class="upload-container">
    <h1>Upload Your Music ðŸŽµ</h1>
    
    <form action="/upload" method="POST" enctype="multipart/form-data" id="uploadForm">
      <div class="file-input-wrapper" id="fileWrapper">
        <svg class="upload-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
        </svg>
        <label for="music_file">Choose a music file</label>
        <div class="file-hint">Drag & drop or click to browse</div>
        <input type="file" id="music_file" name="music_file" accept=".mp3,.wav,.m4a,audio/*" />
        <div id="selectedFile" class="selected-file" style="display: none;"></div>
      </div>
      
      <button type="submit" id="submitBtn">Upload Music</button>
    </form>
    
    <a href="/" class="view-files-link">View Uploaded Files</a>
  </div>

  <script>
    const fileInput = document.getElementById('music_file');
    const fileWrapper = document.getElementById('fileWrapper');
    const selectedFileDiv = document.getElementById('selectedFile');
    const submitBtn = document.getElementById('submitBtn');

    // File selection handler
    fileInput.addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        selectedFileDiv.textContent = `Selected: ${file.name}`;
        selectedFileDiv.style.display = 'block';

        submitBtn.disabled = false;
      } else {
        selectedFileDiv.style.display = 'none';
        submitBtn.disabled = true;
      }
    });

    // Drag and drop functionality
    fileWrapper.addEventListener('dragover', function(e) {
      e.preventDefault();
      fileWrapper.classList.add('dragover');
    });

    fileWrapper.addEventListener('dragleave', function(e) {
      e.preventDefault();
      fileWrapper.classList.remove('dragover');
    });

    fileWrapper.addEventListener('drop', function(e) {
      e.preventDefault();
      fileWrapper.classList.remove('dragover');
      
      const files = e.dataTransfer.files;
      if (files.length > 0) {
        fileInput.files = files;
        fileInput.dispatchEvent(new Event('change'));
      }
    });

    // Form submission feedback
    document.getElementById('uploadForm').addEventListener('submit', function() {
      submitBtn.textContent = 'Uploading...';
      submitBtn.disabled = true;
    });

    // Initial state
    submitBtn.disabled = true;
  </script>
</body>
</html>
