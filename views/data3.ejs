<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music Player</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>
  <!-- Poppins for the clean look -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    /* --- Theming Variables (Pink Accent & Clean White) --- */
    :root {
      /* Light Mode (Default - Matches Reference) */
      --bg-main: #f5f6fa;
      --bg-card: #ffffff;
      --text-main: #2d3436;
      --text-sub: #a4b0be;
      
      --accent: #ff7675; /* Soft Pink/Red from reference */
      --accent-light: rgba(255, 118, 117, 0.15);
      
      --shadow-card: 0 10px 30px rgba(0,0,0,0.05);
      --shadow-float: 0 15px 35px rgba(0,0,0,0.1);
      
      --btn-bg: #f5f6fa;
      --btn-hover: #dfe6e9;
      
      --border-radius: 30px;
    }

    body.dark-mode {
      /* Dark Mode Variant */
      --bg-main: #1e272e;
      --bg-card: #2d3436;
      --text-main: #dfe6e9;
      --text-sub: #636e72;
      
      --accent: #ff7675;
      --accent-light: rgba(255, 118, 117, 0.2);
      
      --shadow-card: 0 10px 30px rgba(0,0,0,0.2);
      --shadow-float: 0 15px 35px rgba(0,0,0,0.4);
      
      --btn-bg: #1e272e;
      --btn-hover: #000000;
    }

    /* Reset & Base */
    * {
      box-sizing: border-box;
      outline: none;
      -webkit-tap-highlight-color: transparent;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg-main);
      color: var(--text-main);
      margin: 0;
      display: flex;
      flex-direction: column;
      height: 100vh;
      overflow: hidden;
      transition: background 0.3s ease, color 0.3s ease;
    }

    /* --- Header (Clean & Minimal) --- */
    header {
      background: var(--bg-main);
      padding: 30px 25px 10px; /* More top padding */
      z-index: 10;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 600px;
      margin: 0 auto;
      width: 100%;
    }

    /* Tabs styled like "PLAYLIST" header in reference */
    .nav-tabs {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }
    
    .nav-label {
        font-size: 0.75rem;
        letter-spacing: 1px;
        color: var(--text-sub);
        font-weight: 600;
        text-transform: uppercase;
    }

    .tab-switcher {
        display: flex;
        gap: 15px;
    }

    .nav-tab {
        font-size: 1.5rem;
        font-weight: 700;
        cursor: pointer;
        color: var(--text-sub);
        transition: all 0.2s;
        border: none;
        background: none;
        padding: 0;
    }

    .nav-tab.active {
        color: var(--text-main);
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .icon-btn {
        background: var(--bg-card);
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        color: var(--text-sub);
        font-size: 1.1rem;
        cursor: pointer;
        box-shadow: var(--shadow-card);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s, color 0.2s;
    }
    
    .icon-btn:hover {
        transform: translateY(-2px);
        color: var(--accent);
    }
    
    .add-btn {
        background: var(--accent);
        color: white;
        box-shadow: 0 5px 15px var(--accent-light);
    }
    .add-btn:hover { color: white; }

    /* --- List Area --- */
    .music-container {
      flex: 1;
      overflow-y: auto;
      padding: 10px 25px 120px; /* Bottom padding for player */
      max-width: 600px;
      width: 100%;
      margin: 0 auto;
      scrollbar-width: none; /* Hide scrollbar for cleaner look */
    }
    
    .music-container::-webkit-scrollbar { display: none; }

    /* Controls Bar inside List (Save/Cancel/Back) */
    .playlist-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        margin-top: 10px;
    }
    
    .action-pill {
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        border: none;
        cursor: pointer;
        background: var(--btn-bg);
        color: var(--text-sub);
    }
    
    .action-pill.primary {
        background: var(--accent);
        color: white;
    }

    /* Track Item (Matches Reference Layout) */
    .track {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 20px;
      cursor: pointer;
      background: transparent;
      transition: transform 0.2s;
    }
    
    .track-left {
        display: flex;
        align-items: center;
        gap: 15px;
        flex: 1;
        overflow: hidden;
    }

    /* Play Icon Circle (Like reference) */
    .play-indicator {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: var(--btn-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-sub);
        font-size: 1rem;
        flex-shrink: 0;
        transition: all 0.3s;
    }

    .track:hover .play-indicator {
        background: var(--bg-card);
        box-shadow: var(--shadow-card);
        color: var(--accent);
    }

    /* Active State (Pink shadow/icon) */
    .track.active-track .play-indicator {
        background: var(--accent);
        color: white;
        box-shadow: 0 5px 15px var(--accent-light);
    }
    
    /* Selection Checkbox */
    .select-check {
        width: 20px;
        height: 20px;
        border: 2px solid var(--text-sub);
        border-radius: 6px;
        margin-right: 10px;
        display: none;
        align-items: center;
        justify-content: center;
    }
    
    .track.selection-mode .select-check { display: flex; }
    .track.selection-mode .play-indicator { display: none; }
    
    .track.selected .select-check {
        background: var(--accent);
        border-color: var(--accent);
    }
    .track.selected .select-check::after {
        content: 'âœ“'; color: white; font-size: 12px;
    }

    .track-info {
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .track-info strong {
      color: var(--text-main);
      font-size: 1rem;
      font-weight: 600;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      margin-bottom: 2px;
    }

    .track-info small {
      color: var(--text-sub);
      font-size: 0.8rem;
      font-weight: 500;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .track-time {
        font-size: 0.85rem;
        color: var(--text-sub);
        font-weight: 500;
        margin-left: 10px;
    }

    /* Playlist Card */
    .playlist-card {
        background: var(--bg-card);
        padding: 20px;
        border-radius: 20px;
        margin-bottom: 15px;
        box-shadow: var(--shadow-card);
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
    }

    /* --- Floating Player (Bottom) --- */
    .player-container {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        width: 90%;
        max-width: 550px;
        z-index: 100;
    }

    /* The Main Player Card */
    .player {
      background: var(--bg-card);
      /* Floating Pill/Card Look */
      border-radius: 25px; 
      padding: 15px 25px;
      box-shadow: var(--shadow-float);
      display: flex;
      flex-direction: column;
      gap: 10px;
      position: relative;
      overflow: hidden;
    }
    
    /* Pink Progress Bar at Bottom of Player */
    .progress-bar-container {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--btn-bg);
    }
    
    .progress-fill {
        height: 100%;
        background: var(--accent);
        width: 0%;
        transition: width 0.1s linear;
    }

    .player-row-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .current-info {
        display: flex;
        flex-direction: column;
        overflow: hidden;
        margin-right: 15px;
    }
    
    #currentTrack {
        font-size: 0.95rem;
        font-weight: 700;
        color: var(--text-main);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    #currentArtist {
        font-size: 0.75rem;
        color: var(--accent); /* Pink accent for "Now Playing" label or Artist */
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .controls {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .ctrl-btn {
        background: transparent;
        border: none;
        color: var(--text-main);
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.2s, color 0.2s;
    }
    
    .ctrl-btn:hover { color: var(--accent); }
    
    .play-btn {
        width: 50px;
        height: 50px;
        background: var(--bg-main);
        border-radius: 50%;
        color: var(--text-main);
        box-shadow: inset 0 0 10px rgba(0,0,0,0.05); /* Inner shadow for depth */
        font-size: 1.8rem;
    }
    
    .play-btn:hover {
        transform: scale(1.05);
        color: var(--accent);
    }

    /* Small secondary controls (Loop/Shuffle) hidden or small in this view */
    .extra-controls {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 5px;
    }
    
    .sec-btn {
        font-size: 1.1rem;
        color: var(--text-sub);
        background: transparent;
        border: none;
        cursor: pointer;
    }
    
    .sec-btn.active { color: var(--accent); }

    /* Modal Styling */
    .modal-overlay {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0,0,0,0.4);
        backdrop-filter: blur(5px);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 200;
    }
    
    .modal {
        background: var(--bg-card);
        padding: 30px;
        border-radius: 30px;
        width: 85%;
        max-width: 320px;
        text-align: center;
        box-shadow: var(--shadow-float);
    }
    
    .modal input {
        width: 100%;
        padding: 12px;
        margin: 20px 0;
        border-radius: 15px;
        border: none;
        background: var(--bg-main);
        color: var(--text-main);
        font-family: inherit;
    }
    
    .modal-btns { display: flex; gap: 10px; justify-content: center; }

    /* Tablet/Desktop Tweaks */
    @media (min-width: 768px) {
      .player-container {
        width: 400px;
        left: auto;
        right: 40px;
        bottom: 40px;
        transform: none;
      }
      .header, .music-container {
        max-width: 800px;
      }
    }
    
    a { text-decoration: none; }

  </style>
</head>
<body>

  <!-- Clean Header -->
  <header>
    <div class="header">
        <div class="nav-tabs">
            <div class="nav-label">LIBRARY</div>
            <div class="tab-switcher">
                <button class="nav-tab active" onclick="switchTab('all')" id="tab-all">Songs</button>
                <button class="nav-tab" onclick="switchTab('playlists')" id="tab-playlists">Playlists</button>
            </div>
        </div>

        <div class="header-actions">
            <!-- Theme Toggle -->
            <button class="icon-btn" onclick="toggleTheme()" title="Toggle Theme">
                <i class="ri-moon-line" id="themeIcon"></i>
            </button>
            
            <!-- Selection Toggle / Add Button -->
            <button class="icon-btn" onclick="toggleSelectionMode(true)" id="selectBtn" title="Select Songs">
                <i class="ri-list-check"></i>
            </button>
            
            <!-- Upload Link -->
            <a href="/postmp3" class="icon-btn add-btn" title="Upload New">
                <i class="ri-add-line"></i>
            </a>
        </div>
    </div>
  </header>
  
  <!-- Main List -->
  <div class="music-container" id="mainContainer">
    <!-- Tracks injected via JS -->
  </div>

  <!-- Floating Player Bottom Bar -->
  <div class="player-container">
      <div class="player">
        <!-- Info & Main Controls -->
        <div class="player-row-top">
            <div class="current-info">
                <div id="currentArtist">NOW PLAYING</div>
                <div id="currentTrack">Select a track</div>
            </div>
            
            <div class="controls">
                <button class="ctrl-btn" id="prevBtn"><i class="ri-skip-back-fill"></i></button>
                <button class="ctrl-btn play-btn" id="playPauseBtn"><i class="ri-play-fill"></i></button>
                <button class="ctrl-btn" id="nextBtn"><i class="ri-skip-forward-fill"></i></button>
            </div>
        </div>
        
        <!-- Secondary Controls (Loop/Shuffle) -->
        <div class="extra-controls">
            <button id="shuffleBtn" class="sec-btn" title="Shuffle"><i class="ri-shuffle-line"></i></button>
            <button id="loopBtn" class="sec-btn" title="Loop"><i class="ri-repeat-line"></i></button>
            <!-- Delete current button (only shows if something playing ideally, but keeping simple) -->
             <button class="sec-btn" onclick="deleteCurrentTrack()" style="color:#ff7675" title="Delete Track"><i class="ri-delete-bin-line"></i></button>
        </div>

        <!-- Progress Bar -->
        <div class="progress-bar-container">
            <div class="progress-fill" id="progressBar"></div>
        </div>
      </div>
  </div>

  <audio id="audioPlayer"></audio>

  <!-- Playlist Modal -->
  <div class="modal-overlay" id="playlistModal">
      <div class="modal">
          <h3 style="color: var(--text-main); margin-top:0;">New Playlist</h3>
          <input type="text" id="playlistNameInput" placeholder="Enter name...">
          <div class="modal-btns">
              <button class="action-pill" onclick="closeModal()">Cancel</button>
              <button class="action-pill primary" onclick="confirmSavePlaylist()">Create</button>
          </div>
      </div>
  </div>

  <script>
    // --- Data Initialization ---
    const allFiles = <%- JSON.stringify(files) %>;
    
    // State
    let currentQueue = [...allFiles]; 
    let currentTrackIndex = 0;
    let isPlaying = false;
    let isShuffleEnabled = false;
    let isLoopEnabled = false;
    let isSelectionMode = false;
    let selectedIndices = new Set();
    let currentTab = 'all'; 
    let viewingPlaylistId = null;

    let savedPlaylists = JSON.parse(localStorage.getItem('vibePlaylists')) || [];

    // DOM Elements
    const audioPlayer = document.getElementById("audioPlayer");
    const currentTrackEl = document.getElementById("currentTrack");
    const currentArtistEl = document.getElementById("currentArtist");
    const playPauseBtn = document.getElementById("playPauseBtn");
    const loopBtn = document.getElementById("loopBtn");
    const shuffleBtn = document.getElementById("shuffleBtn");
    const mainContainer = document.getElementById("mainContainer");
    const themeIcon = document.getElementById("themeIcon");
    const progressBar = document.getElementById("progressBar");

    // --- RENDER LOGIC ---

    function renderAllSongs() {
        let html = '';
        
        // Context controls (if selecting)
        if(isSelectionMode) {
            html += `
            <div class="playlist-controls">
                <span style="font-size:0.9rem; font-weight:600; color:var(--text-sub)">${selectedIndices.size} selected</span>
                <div style="display:flex; gap:10px;">
                     <button class="action-pill" onclick="toggleSelectionMode(false)">Cancel</button>
                     <button class="action-pill primary" onclick="openSaveModal()">Save</button>
                </div>
            </div>`;
        } else {
            // Optional Spacer
            html += `<div style="height:10px;"></div>`;
        }

        if (allFiles.length === 0) {
            html += `<div style="text-align:center; margin-top:50px; color:var(--text-sub);">
                <i class="ri-music-2-line" style="font-size:3rem; opacity:0.3;"></i>
                <p>No songs found</p>
            </div>`;
        } else {
            allFiles.forEach((file, index) => {
                // Split filename for Title vs "Artist" simulation
                const rawName = file.originalname.replace(/\.[^.]+$/, '');
                const parts = rawName.split(/[_-]/); // Split by _ or -
                
                // Heuristic: First part is Artist if multiple parts exist, else generic
                let artist = "Unknown Artist";
                let title = rawName;
                
                if(parts.length > 1) {
                    title = parts.slice(1).join(' ').trim();
                    artist = parts[0].trim();
                } else {
                    title = parts[0];
                }

                // Format Time
                let durationText = '--:--';
                if(file.duration) {
                     const m = Math.floor(file.duration / 60);
                     const s = String(Math.floor(file.duration % 60)).padStart(2, '0');
                     durationText = `${m}:${s}`;
                }
                
                const isSelected = selectedIndices.has(index) ? 'selected' : '';
                const selectClass = isSelectionMode ? 'selection-mode' : '';
                
                // Icon Logic: Play triangle or Pause bars
                const isCurrent = (currentTrackIndex === index && currentTab === 'all');
                const icon = (isCurrent && isPlaying) ? '<i class="ri-pause-fill"></i>' : '<i class="ri-play-fill"></i>';
                const activeClass = isCurrent ? 'active-track' : '';

                html += `
                <div class="track ${selectClass} ${isSelected} ${activeClass}" onclick="handleTrackClick(${index}, 'all')">
                  <div class="track-left">
                      <!-- Checkbox for selection -->
                      <div class="select-check"></div>
                      
                      <!-- Play Button Indicator -->
                      <div class="play-indicator">
                        ${icon}
                      </div>
                      
                      <div class="track-info">
                        <strong>${title}</strong>
                        <small>${artist}</small>
                      </div>
                  </div>
                  <div class="track-time">${durationText}</div>
                </div>`;
            });
        }
        mainContainer.innerHTML = html;
    }

    function renderPlaylistsTab() {
        let html = `<div class="playlist-controls"><span style="font-weight:600; color:var(--text-main)">My Playlists</span></div>`;
        
        if(savedPlaylists.length === 0) {
            html += `<div style="text-align:center; margin-top:50px; color:var(--text-sub);">
                <i class="ri-play-list-add-line" style="font-size:3rem; opacity:0.3;"></i>
                <p>No playlists yet</p>
                <button class="action-pill primary" onclick="switchTab('all'); toggleSelectionMode(true);">Create New</button>
            </div>`;
        } else {
            savedPlaylists.forEach(pl => {
                html += `
                <div class="playlist-card" onclick="openPlaylist('${pl.id}')">
                    <div>
                        <h3 style="margin:0; font-size:1rem; color:var(--text-main);">${pl.name}</h3>
                        <p style="margin:5px 0 0; font-size:0.8rem; color:var(--text-sub);">${pl.indices.length} songs</p>
                    </div>
                    <i class="ri-arrow-right-s-line" style="color:var(--text-sub);"></i>
                </div>`;
            });
        }
        mainContainer.innerHTML = html;
    }

    function renderSinglePlaylist(id) {
        const playlist = savedPlaylists.find(p => p.id === id);
        if(!playlist) return switchTab('playlists');

        let html = `
            <div class="playlist-controls">
                <button class="action-pill" onclick="switchTab('playlists')"><i class="ri-arrow-left-line"></i> Back</button>
                <button class="action-pill" onclick="deletePlaylist('${id}')" style="background:#ffeaa7; color:#e17055;">Delete</button>
            </div>
            <h2 style="margin:0 0 20px; font-size:1.5rem; color:var(--text-main);">${playlist.name}</h2>
        `;

        playlist.indices.forEach((fileIndex, i) => {
            if(fileIndex >= allFiles.length) return;
            const file = allFiles[fileIndex];
            
            // Name Parsing
            const rawName = file.originalname.replace(/\.[^.]+$/, '');
            const parts = rawName.split(/[_-]/);
            let artist = parts.length > 1 ? parts[0].trim() : "Unknown";
            let title = parts.length > 1 ? parts.slice(1).join(' ').trim() : parts[0];

            let durationText = '--:--';
            if(file.duration) {
                const m = Math.floor(file.duration / 60);
                const s = String(Math.floor(file.duration % 60)).padStart(2, '0');
                durationText = `${m}:${s}`;
            }

            const isCurrent = (currentTrackIndex === i && currentTab === 'single_playlist' && viewingPlaylistId === id);
            const icon = (isCurrent && isPlaying) ? '<i class="ri-pause-fill"></i>' : '<i class="ri-play-fill"></i>';
            const activeClass = isCurrent ? 'active-track' : '';

            html += `
            <div class="track ${activeClass}" onclick="handleTrackClick(${i}, 'playlist')">
              <div class="track-left">
                  <div class="play-indicator">${icon}</div>
                  <div class="track-info">
                    <strong>${title}</strong>
                    <small>${artist}</small>
                  </div>
              </div>
              <div class="track-time">${durationText}</div>
            </div>`;
        });
        
        mainContainer.innerHTML = html;
    }

    // --- LOGIC ---

    function switchTab(tab) {
        currentTab = tab;
        isSelectionMode = false;
        selectedIndices.clear();
        
        // Update styling
        document.getElementById('tab-all').classList.toggle('active', tab === 'all');
        document.getElementById('tab-playlists').classList.toggle('active', tab === 'playlists');

        if(tab === 'all') renderAllSongs();
        else if(tab === 'playlists') renderPlaylistsTab();
    }

    function handleTrackClick(index, context) {
        if (isSelectionMode && context === 'all') {
            if(selectedIndices.has(index)) selectedIndices.delete(index);
            else selectedIndices.add(index);
            renderAllSongs();
            return;
        }

        if (context === 'all') {
            currentQueue = [...allFiles];
            playTrack(index);
        } else if (context === 'playlist') {
            const playlist = savedPlaylists.find(p => p.id === viewingPlaylistId);
            if(playlist) {
                currentQueue = playlist.indices.map(i => allFiles[i]).filter(f => f !== undefined);
                playTrack(index);
            }
        }
    }

    function toggleSelectionMode(active) {
        isSelectionMode = active;
        selectedIndices.clear();
        renderAllSongs();
    }

    function openSaveModal() {
        if(selectedIndices.size === 0) return alert("Select songs first");
        document.getElementById('playlistModal').style.display = 'flex';
        document.getElementById('playlistNameInput').focus();
    }
    function closeModal() { document.getElementById('playlistModal').style.display = 'none'; }

    function confirmSavePlaylist() {
        const name = document.getElementById('playlistNameInput').value.trim() || "My Playlist";
        const newPlaylist = {
            id: Date.now().toString(),
            name: name,
            indices: Array.from(selectedIndices).sort((a,b) => a - b)
        };
        savedPlaylists.push(newPlaylist);
        localStorage.setItem('vibePlaylists', JSON.stringify(savedPlaylists));
        closeModal();
        switchTab('playlists');
    }

    function openPlaylist(id) {
        viewingPlaylistId = id;
        currentTab = 'single_playlist';
        renderSinglePlaylist(id);
    }
    
    function deletePlaylist(id) {
        if(confirm("Delete playlist?")) {
            savedPlaylists = savedPlaylists.filter(p => p.id !== id);
            localStorage.setItem('vibePlaylists', JSON.stringify(savedPlaylists));
            switchTab('playlists');
        }
    }

    // --- PLAYER CONTROLS ---

    function playTrack(index) {
        if(index < 0 || index >= currentQueue.length) return;

        currentTrackIndex = index;
        const song = currentQueue[index];
        audioPlayer.src = song.url;
        
        // Update Player Text
        const rawName = song.originalname.replace(/\.[^.]+$/, '');
        const parts = rawName.split(/[_-]/);
        let artist = parts.length > 1 ? parts[0].trim() : "NOW PLAYING";
        let title = parts.length > 1 ? parts.slice(1).join(' ').trim() : parts[0];
        
        currentTrackEl.textContent = title;
        currentArtistEl.textContent = artist;

        audioPlayer.play().catch(e => console.log("User interaction needed"));
        isPlaying = true;
        updatePlayBtnUI();
        
        // Re-render list to show active state if visible
        if(currentTab === 'all') renderAllSongs();
        if(currentTab === 'single_playlist') renderSinglePlaylist(viewingPlaylistId);
    }

    function updatePlayBtnUI() {
        playPauseBtn.innerHTML = isPlaying ? '<i class="ri-pause-fill"></i>' : '<i class="ri-play-fill"></i>';
    }

    function togglePlayPause() {
        if (!audioPlayer.src && currentQueue.length > 0) {
            playTrack(0);
            return;
        }
        if (isPlaying) audioPlayer.pause();
        else audioPlayer.play();
        
        isPlaying = !isPlaying;
        updatePlayBtnUI();
        
        // Re-render to update icon in list
        if(currentTab === 'all') renderAllSongs();
        if(currentTab === 'single_playlist') renderSinglePlaylist(viewingPlaylistId);
    }

    function nextTrack() {
        if(isLoopEnabled) {
            audioPlayer.currentTime = 0;
            audioPlayer.play();
            return;
        }
        if (isShuffleEnabled) {
            currentTrackIndex = Math.floor(Math.random() * currentQueue.length);
        } else {
            currentTrackIndex = (currentTrackIndex + 1) % currentQueue.length;
        }
        playTrack(currentTrackIndex);
    }

    function prevTrack() {
        if (audioPlayer.currentTime > 3) {
            audioPlayer.currentTime = 0;
            return;
        }
        currentTrackIndex = (currentTrackIndex - 1 + currentQueue.length) % currentQueue.length;
        playTrack(currentTrackIndex);
    }
    
    // Direct delete of current track
    function deleteCurrentTrack() {
        if(currentQueue.length === 0) return;
        const song = currentQueue[currentTrackIndex];
        const id = song.public_id.split('/').pop();
        if(confirm("Delete this file permanently?")) {
            window.location.href = `/AllBus/${id}`;
        }
    }

    // Toggle Buttons
    loopBtn.onclick = () => {
        isLoopEnabled = !isLoopEnabled;
        loopBtn.classList.toggle('active', isLoopEnabled);
    };
    shuffleBtn.onclick = () => {
        isShuffleEnabled = !isShuffleEnabled;
        shuffleBtn.classList.toggle('active', isShuffleEnabled);
    };

    // Events
    playPauseBtn.onclick = togglePlayPause;
    document.getElementById("nextBtn").onclick = nextTrack;
    document.getElementById("prevBtn").onclick = prevTrack;
    audioPlayer.onended = nextTrack;
    
    // Progress Bar Animation
    audioPlayer.ontimeupdate = () => {
        if(audioPlayer.duration) {
            const percent = (audioPlayer.currentTime / audioPlayer.duration) * 100;
            progressBar.style.width = percent + "%";
        }
    };

    // Theme
    function toggleTheme() {
        document.body.classList.toggle('dark-mode');
        const isDark = document.body.classList.contains('dark-mode');
        themeIcon.className = isDark ? 'ri-sun-line' : 'ri-moon-line';
        localStorage.setItem('vibeTheme', isDark ? 'dark' : 'light');
    }
    if(localStorage.getItem('vibeTheme') === 'dark') toggleTheme();

    // Start
    renderAllSongs();
  </script>
